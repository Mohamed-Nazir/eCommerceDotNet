@model EhodBoutiqueEnLigne.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = Localizer["CreatProductTitle"];
    Layout = "_AdminLayout";
}
<div class="d-flex justify-content-center mt-3">
    <p class="text-muted">
        @Localizer["Fields marked with an asterisk"] (<span class="text-danger">*</span>) @Localizer["are required."]
    </p>
</div>
<div class="d-flex justify-content-center mt-3">
    <form asp-action="Create" method="post" class="col-lg-6">
        
        <div class="mb-3 col-6">
            <label>@Localizer["Name"] (<span class="text-danger">*</span>):</label>
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3 col-4">
            <label>@Localizer["Price"] (<span class="text-danger">*</span>):</label>
             <div><span asp-validation-for="Price" class="text-danger"></span></div>
            <input asp-for="Price" class="form-control" type="number" min="0" value="0" />
        </div>
        <div class="mb-3 col-8">
            <label>@Localizer["Description"] (<span class="text-danger">*</span>):</label>
             <div><span asp-validation-for="Description" class="text-danger"></span></div>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="mb-3 col-4">
            <label>@Localizer["Stock"] (<span class="text-danger">*</span>):</label>
             <div><span asp-validation-for="Stock" class="text-danger"></span></div>
            <input asp-for="Stock" class="form-control" type="number" min="1" value="0"/>
        </div>
        <div class="mb-3 col-8">
            <label>@Localizer["Details"] :</label>
            <input asp-for="Details" class="form-control" />
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="@Localizer["OK"]" />
        </div>
    </form>
</div>