@model EhodBoutiqueEnLigne.Models.ViewModels.LoginModel

@{
    ViewBag.Title = "Log In";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-center mt-3">
    <p class="text-muted">
        @Localizer["Fields marked with an asterisk"] (<span class="text-danger">*</span>) @Localizer["are required."]
    </p>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
     <div class="alert alert-danger mt-3 text-center" role="alert" style="max-width: 400px; margin-left: auto; margin-right: auto;">
        @ViewBag.ErrorMessage
    </div>
}

<div class="d-flex justify-content-center mt-3">
    <form asp-action="Login" asp-controller="Account" method="post" class="col-lg-4 col-md-6 col-sm-8">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="mb-3">
            <label>@Localizer["Name"] (<span class="text-danger">*</span>):</label>
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
           <label>@Localizer["Password"] (<span class="text-danger">*</span>):</label>
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <input asp-for="Password" class="form-control" type="password"/>
        </div>
        <button class="btn btn-primary" type="submit">Log In</button>
    </form>
</div>
